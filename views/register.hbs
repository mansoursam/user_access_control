<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <div class="container w-100">
                {{#if errors }}
                {{#each errors }}
                <div class="alert alert-danger alert-dismissible fade show " role="alert">
                    <strong>{{msg }}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{/each}}
                {{/if}}
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <label for="name">Username</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                            value="{{name}}" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                            value="{{email}}" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Create Password" value="{{password}}" />
                    </div>

                    <div class="form-group">
                        <label for="inputState">Role</label>
                        <select id="inputState" class="form-control" name="role">
                            <option>Choose role...</option>
                            <option>Admin</option>
                            <option>Web Developer</option>
                            <option>Fullstack Developer</option>
                            <option>Web Designer</option>
                            <option>Marketing</option>
                            <option>Manager</option>
                            <option>Teamleader</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" name="street" placeholder="1234 Main St">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" name="city">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">Country</label>
                            <select id="inputState" class="form-control" name="country">
                                <option>Choose Country...</option>
                                <option>USA</option>
                                <option>Tunisia</option>
                                <option>Germany</option>
                                <option>Syria</option>
                                <option>Russia</option>
                                <option>Spain</option>
                                <option>Bangladesh</option>
                                <option>Iran</option>
                                <option>Poland</option>
                            </select>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input type="number" class="form-control" name="zip">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info btn-block">
                        Register
                    </button>
                </form>
                <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
            </div>
        </div>
    </div>